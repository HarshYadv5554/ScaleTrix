              "raw": "{{base_url}}/api/responses",
              "host": ["{{base_url}}"],
              "path": ["api", "responses"]
            }
          }
        }
      ]
    },
    {
      "name": "Recommendations",
      "item": [
        {
          "name": "Get All Recommendations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/recommendations",
              "host": ["{{base_url}}"],
              "path": ["api", "recommendations"]
            }
          }
        }
      ]
    },
    {
      "name": "Analytics",
      "item": [
        {
          "name": "Get Analytics Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/analytics/stats",
              "host": ["{{base_url}}"],
              "path": ["api", "analytics", "stats"]
            }
          }
        },
        {
          "name": "Get Analytics Events",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/analytics/events",
              "host": ["{{base_url}}"],
              "path": ["api", "analytics", "events"]
            }
          }
        },
        {
          "name": "Get Analytics Events (Filtered)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/analytics/events?eventType=quiz_started&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "analytics", "events"],
              "query": [
                {
                  "key": "eventType",
                  "value": "quiz_started"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    },
    {
